{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/node"
    },
    {
      "src": "frontend/build/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "http://localhost:8082/api/$1"
    },
    {
      "src": "/streaming/(.*)",
      "dest": "http://localhost:8081/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/build/$1"
    }
  ],
  "env": {
    "REACT_APP_PRODUCTION_API_URL": "http://localhost:8082",
    "REACT_APP_STREAMING_API_URL": "http://localhost:8081"
  },
  "github": {
    "enabled": true,
    "silent": true
  }
} 